pipeline {
    agent {
        docker { image 'node:10-alpine' }
    }
    stages {
        stage('Test') {
            steps {
                sh 'node --version'
            }
        }
        stage('Build') { 
            steps {
                sh 'npm install' 
                sh 'ls'
                stash includes: 'node_modules/', name: 'dependencies' 
            }
        }
        stage('Copy artifacts') { 
            steps {
                sh 'pwd' 
                sh 'ls'
                sh 'cd ..'
                sh 'pwd'
                sh 'ls'
                unstash 'dependencies'
                sh 'ls'
            }
        }
    }
}